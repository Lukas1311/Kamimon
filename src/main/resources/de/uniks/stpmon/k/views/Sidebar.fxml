<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.lang.*?>
<GridPane fx:id="grid" alignment="TOP_CENTER" maxWidth="-Infinity" minHeight="-Infinity" prefHeight="500.0"
          prefWidth="50.0" styleClass="sidebar-color" stylesheets="@css/sidebar.css" xmlns="http://javafx.com/javafx/19"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stpmon.k.controller.sidebar.SidebarController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="1.7976931348623157E308" minHeight="100.0" prefHeight="100.0" vgrow="ALWAYS"/>
      <RowConstraints maxHeight="1.7976931348623157E308" minHeight="100.0" prefHeight="100.0" vgrow="ALWAYS"/>
   </rowConstraints>
   <children>
      <VBox alignment="TOP_CENTER" prefWidth="50.0" GridPane.hgrow="ALWAYS" GridPane.valignment="TOP">
         <children>
            <Button fx:id="chat" mnemonicParsing="false" onAction="#openChat" prefHeight="50.0" prefWidth="50.0"
                    text="C">
               <styleClass>
                  <String fx:value="sidebar-color"/>
                  <String fx:value="button-color"/>
               </styleClass>
            </Button>
            <Button fx:id="friends" mnemonicParsing="false" onAction="#openFriends" prefHeight="50.0" prefWidth="50.0"
                    text="F">
               <styleClass>
                  <String fx:value="sidebar-color"/>
                  <String fx:value="button-color"/>
               </styleClass>
            </Button>
         </children>
      </VBox>
      <VBox alignment="BOTTOM_CENTER" prefWidth="50.0" styleClass="sidebar-color" GridPane.hgrow="ALWAYS"
            GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
         <children>
            <Button fx:id="pause" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#toPause"
                    prefHeight="50.0" prefWidth="50.0" text="P">
               <styleClass>
                  <String fx:value="sidebar-color"/>
                  <String fx:value="button-color"/>
               </styleClass>
            </Button>
            <Button fx:id="settings" mnemonicParsing="false" onAction="#openSettings" prefHeight="50.0" prefWidth="50.0"
                    text="âš™">
               <font>
                  <Font size="18.0"/>
               </font>
               <styleClass>
                  <String fx:value="sidebar-color"/>
                  <String fx:value="button-color"/>
               </styleClass>
            </Button>
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#logout" prefHeight="50.0" prefWidth="50.0"
                    text="L">
               <styleClass>
                  <String fx:value="sidebar-color"/>
                  <String fx:value="button-color"/>
               </styleClass>
            </Button>
         </children>
      </VBox>
   </children>
</GridPane>
