<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox fx:id="messageBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.uniks.stpmon.k.controller.InvitationController">
    <VBox alignment="CENTER">
        <children>
            <Text fx:id="invited_text" strokeType="OUTSIDE" strokeWidth="0.0" text="%you.are.invited">
                <font>
                    <Font size="12.0"/>
                </font>
            </Text>
            <Button fx:id="join_button" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="%join">
                <VBox.margin>
                    <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                </VBox.margin>
            </Button>
        </children>
    </VBox>
    <HBox VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
        <VBox HBox.hgrow="ALWAYS">
            <Text fx:id="senderName" strokeType="OUTSIDE" strokeWidth="0.0" text="Name">
                <VBox.margin>
                    <Insets left="10.0"/>
                </VBox.margin>
                <font>
                    <Font size="10.0"/>
                </font>
            </Text>
        </VBox>
        <VBox alignment="TOP_RIGHT" HBox.hgrow="ALWAYS">
            <Text fx:id="sendTime" strokeType="OUTSIDE" strokeWidth="0.0" text="12:00">
                <VBox.margin>
                    <Insets right="10.0"/>
                </VBox.margin>
                <font>
                    <Font size="10.0"/>
                </font>
            </Text>
        </VBox>
    </HBox>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</VBox>
