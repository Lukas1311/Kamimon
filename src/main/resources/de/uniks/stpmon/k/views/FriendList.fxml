<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<VBox alignment="CENTER" maxWidth="370.0" prefHeight="720.0" spacing="10.0" styleClass="friends-menu-holder" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stpmon.k.controller.FriendListController">
    <VBox fx:id="friendListVbox" alignment="TOP_CENTER" VBox.vgrow="ALWAYS" />
    <CheckBox fx:id="checkBox" mnemonicParsing="false" text="Search all users" />
    <VBox alignment="CENTER_LEFT" maxWidth="330.0" minWidth="330.0" prefWidth="330.0" styleClass="friends-scroll-pane" VBox.vgrow="NEVER">
        <StackPane alignment="CENTER_LEFT" maxWidth="330.0" minWidth="330.0" prefWidth="330.0">
            <TextField fx:id="searchFriend" maxWidth="330.0" minWidth="330.0" prefHeight="38.0" prefWidth="330.0" promptText="%search.for.a.friend" styleClass="friends-text-input" StackPane.alignment="CENTER" />
            <Button fx:id="searchButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" styleClass="friends-search-button" textAlignment="CENTER" StackPane.alignment="CENTER_RIGHT">
                <graphic>
                    <FontIcon iconLiteral="mdmz-search"/>
                </graphic>
                <tooltip>
                    <Tooltip text="%search"/>
                </tooltip>
            </Button>
        </StackPane>
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
    </VBox>
</VBox>
