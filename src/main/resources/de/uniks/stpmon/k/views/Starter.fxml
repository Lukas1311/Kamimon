   <ImageView fx:id="starterBackground" fitHeight="332.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
      <Image url="@../controller/starter-choice-box.png" />
   </ImageView>
   <VBox alignment="TOP_CENTER" prefHeight="332.0" prefWidth="250.0">
      <ImageView fx:id="starterImage" fitHeight="160.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true">
         <VBox.margin>
            <Insets bottom="60.0" top="40.0" />
         </VBox.margin>
      </ImageView>
      <Label fx:id="monsterNameLabel" textFill="WHITE" />
   </VBox>
</StackPane>
