<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import java.net.URL?>
<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" styleClass="loading-screen"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.uniks.stpmon.k.controller.LoadingRegionController">
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <ImageView fx:id="imageViewKamimonLettering" fitHeight="200.0" fitWidth="400.0" pickOnBounds="true"
                       preserveRatio="true">
                <VBox.margin>
                    <Insets bottom="50.0"/>
                </VBox.margin>
            </ImageView>
            <Label fx:id="regionLabel" alignment="CENTER" prefHeight="73.0" prefWidth="250.0" text="Region">
                <VBox.margin>
                    <Insets bottom="30.0"/>
                </VBox.margin>
                <styleClass>
                    <String fx:value="loading-label"/>
                </styleClass>
            </Label>
            <ProgressBar fx:id="progressBar" prefHeight="17.0" prefWidth="387.0" progress="0.0"
                         styleClass="loading-progress-bar"/>
        </VBox>
    </center>
    <stylesheets>
        <URL value="@css/generalStyle.css"/>
        <URL value="@css/ingameStyle.css"/>
    </stylesheets>
</BorderPane>
