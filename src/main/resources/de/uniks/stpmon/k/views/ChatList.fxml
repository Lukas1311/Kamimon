<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<VBox maxWidth="370.0" prefHeight="720.0" prefWidth="370.0" spacing="2.0"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.uniks.stpmon.k.controller.ChatListController">

    <VBox fx:id="chatList" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS"/>
    <VBox alignment="CENTER">
        <Button fx:id="newChatButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="350.0"
                style="-fx-background-color: blue; -fx-background-radius: 10;" text="Neuer Chat" textFill="WHITE" onAction="#createChat">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </Button>
    </VBox>
</VBox>
