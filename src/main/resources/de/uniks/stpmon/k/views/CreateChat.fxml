<VBox maxWidth="370.0" prefHeight="720.0" prefWidth="370.0" style="-fx-border-color: black; -fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stpmon.k.controller.CreateChatController">
    <HBox fillHeight="false" prefWidth="368.0">
        <VBox fillWidth="false" prefWidth="185.0">
