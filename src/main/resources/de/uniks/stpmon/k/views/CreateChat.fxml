                    <Insets bottom="5.0" left="25.0" right="5.0" top="5.0" />
                </VBox.margin>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <tooltip><Tooltip text="%back"/></tooltip>
            </Button>
        </VBox>
        <VBox alignment="TOP_RIGHT" fillWidth="false" prefWidth="185.0">
            <Button fx:id="leaveGroupButton" mnemonicParsing="false" onAction="#leaveGroup" style="-fx-background-color: red; -fx-background-radius: 10;" text="%leave.group" textFill="WHITE" visible="false">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="25.0" top="15.0" />
                </VBox.margin>
            </Button>
        </VBox>
    </HBox>
      <VBox fx:id="groupMemberList" prefHeight="554.0" prefWidth="368.0" VBox.vgrow="ALWAYS">
          <padding>
              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </padding>
      </VBox>
    <Label fx:id="errorLabel">
        <VBox.margin>
            <Insets left="10.0" />
        </VBox.margin>
    </Label>
    <HBox>
        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
            <TextField fx:id="groupNameField" prefWidth="350.0" promptText="%enter.groupname">
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </TextField>
            <Button fx:id="createGroupButton" mnemonicParsing="false" onAction="#createGroup" prefHeight="25.0" prefWidth="350.0" style="-fx-background-color: blue; -fx-background-radius: 10;" text="%create.group.button.create" textFill="WHITE">
