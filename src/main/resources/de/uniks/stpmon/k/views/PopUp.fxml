<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="150.0"
            prefWidth="450.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.uniks.stpmon.k.controller.PopUpController">
    <top>
        <Button fx:id="popUpCancelButton" alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#cancel" text="x"
                textAlignment="JUSTIFY" BorderPane.alignment="TOP_RIGHT"/>
    </top>
    <center>
        <Text fx:id="popUpMainText" strokeType="OUTSIDE" strokeWidth="0.0" text="\%popUpMainText"
              BorderPane.alignment="CENTER"/>
    </center>
    <bottom>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <BorderPane.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </BorderPane.margin>
            <Button fx:id="approveButton" mnemonicParsing="false" onAction="#approve" text="\%popUpApprove"/>
            <Button fx:id="discardButton" mnemonicParsing="false" onAction="#cancel" text="\%popUpDiscard"
                    GridPane.columnIndex="1"/>
        </GridPane>
    </bottom>
</BorderPane>
